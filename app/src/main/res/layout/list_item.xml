<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:padding="16dp">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="@dimen/image_view_height"
        android:layout_weight="2"
        android:src="@drawable/broccoli"/>

    <LinearLayout
        android:layout_width="@dimen/zero_dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/vegetable_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero_dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingStart="@dimen/activity_margin"
            android:paddingEnd="@dimen/activity_margin"
            android:text="@string/vegetable_list_item_name"
            android:textSize="@dimen/vegetable_name_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero_dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/vegetable_sale"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="@dimen/vegetable_sale_height"
                android:layout_weight="1"
                android:focusable="false"
                android:layout_gravity="bottom"
                android:src="@drawable/sale"
                android:focusableInTouchMode="false"
                android:text="@string/sale_vegetable_button" />

            <TextView
                android:id="@+id/vegetable_price"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingLeft="@dimen/activity_margin"
                android:paddingStart="@dimen/activity_margin"
                android:paddingEnd="@dimen/activity_margin"
                android:text="@string/vegetable_list_item_price"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/vegetable_price_text_size"
                android:gravity="bottom"/>

            <TextView
                android:id="@+id/vegetable_quantity"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="end|center_vertical"
                android:text="@string/vegetable_list_item_quantity"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/vegetable_quantity_text_size"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>